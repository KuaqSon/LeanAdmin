@model LeanAdmin.Models.Question
@{
    ViewBag.Title = "AddQuestion";
}

<h2>Add Question</h2>
<br />

<form action="@Url.Action("Index","Questions")">
    <div class="container">
        <div class="mb-3">
            <label>Label </label>
            @Html.EditorFor(model => model.Label, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="mb-3">
            <label>Description </label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="mb-3">
            <label>Control Type </label>
            @Html.EditorFor(model => model.ControlId, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="mb-3">
            <label>Attribute </label>
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Value</th>
                    <th> <button class="btn btn-info"><i class="fas fa-plus"></i></button></th>
                </tr>
            </table>
        </div>
    </div>
    
    <button class="btn btn-success" type="submit"> Add</button>

</form>
